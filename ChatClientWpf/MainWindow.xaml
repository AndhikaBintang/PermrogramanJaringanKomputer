<Window x:Class="ChatClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="450" Width="600">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
            <TextBlock VerticalAlignment="Center">Server:</TextBlock>
            <TextBox x:Name="TxtIP" Width="120" Margin="6,0,0,0" Text="127.0.0.1"/>
            <TextBox x:Name="TxtPort" Width="60" Margin="6,0,0,0" Text="11111"/>
            <TextBox x:Name="TxtUser" Width="120" Margin="12,0,0,0" Text="ClientA"/>
            <Button x:Name="BtnConnect" Content="Connect" Margin="8,0,0,0" Click="BtnConnect_Click"/>
            <Button x:Name="BtnDisconnect" Content="Disconnect" Margin="4,0,0,0" Click="BtnDisconnect_Click" IsEnabled="False"/>
        </StackPanel>

        <ListBox x:Name="LstMessages" Grid.Row="1" />

        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,8,0,0">
            <TextBox x:Name="TxtMessage" Width="440" Height="26" />
            <Button x:Name="BtnSend" Content="Send" Width="80" Margin="8,0,0,0" Click="BtnSend_Click" IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
