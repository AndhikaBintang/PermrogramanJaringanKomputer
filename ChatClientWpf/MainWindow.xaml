<Window x:Class="ChatClientWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chat Client" Height="500" Width="800"
        Background="{DynamicResource AppBackground}"
        Foreground="{DynamicResource AppForeground}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <!-- Atas: Input koneksi -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="2" Margin="0,0,0,10">
            <TextBox x:Name="TxtIp" Width="120" Text="127.0.0.1" Margin="0,0,5,0" />
            <TextBox x:Name="TxtPort" Width="60" Text="5000" Margin="0,0,5,0" />
            <TextBox x:Name="TxtUsername" Width="120" Text="User1" Margin="0,0,5,0" />
            <Button x:Name="btnConnect" Content="Connect" Width="80" Margin="0,0,5,0" Click="btnConnect_Click"/>
            <Button x:Name="btnDisconnect" Content="Disconnect" Width="80" Margin="0,0,5,0" Click="btnDisconnect_Click"/>
            <Button x:Name="btnTheme" Content="Switch Theme" Width="100" Margin="0,0,5,0" Click="btnTheme_Click"/>
        </StackPanel>

        <!-- Tengah: area chat -->
        <TextBox x:Name="ChatBox"
                 Grid.Row="1" Grid.Column="0"
                 Margin="0,0,5,0"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Disabled"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"/>

        <!-- Tengah kanan: daftar user aktif -->
        <GroupBox Header="Active Users" Grid.Row="1" Grid.Column="1" Margin="0,0,0,0">
            <ListBox x:Name="UserList"/>
        </GroupBox>

        <!-- Bawah: input pesan -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,10,0,0">
            <TextBox x:Name="TxtMessage" Width="600" Height="30" Margin="0,0,5,0"/>
            <Button x:Name="btnSend" Content="Send" Width="80" Click="btnSend_Click"/>
        </StackPanel>
    </Grid>
</Window>
